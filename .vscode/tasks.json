{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build driver",
            "type": "shell",
            "command": "g++-8",
            "args": [
                "-g",
                "tcpUserSocket.cpp",
                "tcpServerSocket.cpp",
                "chatServer.cpp",
                "Parsing.cpp",
                "user.cpp",
                "server.cpp",
                "-pthread",
                "-o",
                "chatServer.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "g++-8",
            "args": [
                "-g",
                "tcpClientSocket.cpp",
                "chatClient.cpp",
                "Parsing.cpp",
                "-pthread",
                "-o",
                "chatClient.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}